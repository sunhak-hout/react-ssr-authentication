{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}